<!--
  Step 1: The form must be sharable between the new and edit views.
-->

<form action="<%= (typeof actionPath === 'undefined') ? '/cars' : actionPath %>" , method="post">
  <% if (typeof actionPath !== 'undefined') { %>
  <input type="hidden" name="id" value="<%= formData.id %>">
  <% } %>
  <div class="form-group">
      <label for="carMake">Car Make</label>
      <input type="text" name ="carMake" class="form-control" value="<%= formData.carMake %>">
  </div>

  <div class="form-group">
      <label for="model">Car Model</label>
      <input type="text" name="model" class="form-control" value="<%= formData.model %>">
  </div>

  <div class="form-group">
    <label for="year">Car Manufacturing Year</label>
    <input type="text" name="year" class="form-control" value="<%= formData.year %>">
</div>

  <div class="form-group">
      <label for="warranty">Warranty</label>
      <select name="warranty" class="form-control">
          <option value="IN WARRANTY">Waranteed</option>
          <option <%= formData.warranty && formData.warranty === 'NOT IN WARRANTY' ? 'selected' : null %> value="NOT IN WARRANTY">Not warranteed</option>
      </select>
  </div>
  <div class="form-group">
      <button class="btn btn-dark">Submit</button>
  </div>
</form>